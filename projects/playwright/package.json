{
  "name": "tms-v2-playwright-tests",
  "version": "1.0.0",
  "description": "TMS_v2 E2E 테스트 자동화 - Playwright",
  "main": "index.js",
  "scripts": {
    "test": "npx playwright test",
    "test:headed": "npx playwright test --headed",
    "test:debug": "npx playwright test --debug",
    "test:ui": "npx playwright test --ui",
    "test:auth": "npx playwright test tests/tms/auth",
    "test:testcase": "npx playwright test tests/tms/testcase",
    "test:plan": "npx playwright test tests/tms/plan",
    "test:dashboard": "npx playwright test tests/tms/dashboard",
    "test:smoke": "npx playwright test --grep @smoke",
    "test:critical": "npx playwright test --grep @critical",
    "report": "npx playwright show-report",
    "install-browsers": "npx playwright install"
  },
  "keywords": [
    "playwright",
    "testing",
    "automation",
    "tms",
    "e2e"
  ],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "cross-env": "^10.0.0"
  },
  "dependencies": {
    "@wdio/cli": "^9.19.2",
    "express": "^5.1.0",
    "webdriverio": "^9.19.2"
  }
}
